generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  name String
  pfpUrl String

  projects Project[]
}

model Project {
  id String @id @default(uuid())
  name String
  ownerId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  databases Database[]

  owner User @relation(fields: [ownerId], references: [id])
}

model Database {
  id String @id @default(uuid())
  name String
  projectId String

  createdAt DateTime @default(now())

  tables Table[]

  project Project @relation(fields: [projectId], references: [id])
}

model Column {
  id String @id @default(uuid())
  name String
  dtype String
  data Json
  tableId String

  table Table @relation(fields: [tableId], references: [id])
}

model Table {
  id String @id @default(uuid())
  name String
  databaseId String

  createdAt DateTime @default(now())

  columns Column[]

  database Database @relation(fields: [databaseId], references: [id])
}